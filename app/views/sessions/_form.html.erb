<%= form_for(:session, url: sessions_path) do |f| %>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>

    <br>

    <%= f.submit "Sign in", data: { disable_with: 'Signing in...' } %>
<% end %>

<p>
    New user? <%= link_to "Register here!", root_url + '#register' %>
</p>