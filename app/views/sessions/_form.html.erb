<%= form_for(:session, url: sessions_path) do |f| %>
    
    <div class="xbutton">[x]</div>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>

    <br>

    <%= f.submit "Sign in", data: { disable_with: 'Signing in...' }, :class => "coolButton" %>
<% end %>