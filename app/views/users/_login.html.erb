<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <br><br>
    <%= f.submit "Login", data: { disable_with: 'Logging in...' } %>
<% end %>