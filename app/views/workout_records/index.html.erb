<!-- This is the page to display a summary of workout progress -->
<div class="progress_background">
  <%= render '/layouts/navbar' %>
  
  <div class="progress_container">
    <table>
      <thead>
        <tr>
          <th>Workout</th>
          <th colspan="5">Time</th>
          <th colspan="5">Distance</th>
        </tr>
        <tr class="subhead">
          <th></th>
          <th>Today</th>
          <th>This Week</th>
          <th>This Month</th>
          <th>This Year</th>
          <th>Total</th>
          <th>Today</th>
          <th>This Week</th>
          <th>This Month</th>
          <th>This Year</th>
          <th>Total</th>
      </thead>
      <tbody>
        <!-- See WorkoutsHelper for functionality -->
        <% record_totals.each do |w,a| %>
          <tr>
            <td><%= w.name %></td>
            <% for i in (0..10) %>
            <td><%= a[i] %></td>
            <% end %>
          </tr>
    <% end %>
  </div>
</div>