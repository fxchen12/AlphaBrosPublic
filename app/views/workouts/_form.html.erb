<%= form_for(@workout) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <!--THIS SHOULD BE A DROPDOWN-->  
  <%= f.label :type %><br>
  <%= f.select :type, options_for_select(%w[Reps Distance Time]) %>

  <!-- Show one of the three below dynamically based on type choice -->
  <%= f.label :distance %><br>
  <%= f.number_field :distance %>

  <%= f.label :duration %><br>
  <%= f.number_field :duration %>

  <%= f.label :reps %><br>
  <%= f.number_field :reps %>
  <!---->

  <%= f.label :notes %><br>
  <%= f.text_area :notes %>

  <%= f.submit %>
<% end %>
