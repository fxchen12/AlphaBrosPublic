
<%= render '/layouts/navbar' %>

<div class="dashboard_container">
  <% if @workouts.empty? %>
    <div class="no_workouts">Add an activity to get started!</div>
  <% else %>
    <table>
      <tbody>
        <% @workouts.each do |workout| %>
          <tr class="workout_row">
            <td class="delete_button">
                <%=
                  link_to(
                    image_tag("delete_button_gray.png",
                      :onmouseover => "this.src='/assets/delete_button_red.png'",
                      :onmouseout => "this.src='/assets/delete_button_gray.png'",
                      :class => "delete_image"),
                  workout,
                  :method => :delete,
                  data: { confirm: "Delete this workout?" })
                %>
            </td>
            <td class="start_button"><%= image_tag "blue_chevron.png", :class => "start_image" %></td>
            <td class="workout_name"><%= workout.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= render 'form' %>

  <br>

</div>
