html, body{height:100%;}

div.settings_background
{
  min-height:100%;
  overflow:auto;
  /*padding-bottom: -6em;*/
  margin-bottom:1em;
  background-image: url(<%= asset_path 'background13.jpg' %>);
  background-repeat:no-repeat;
  background-size:cover;
  background-position:center;
}

div.settings_container
{
  color:#404040;
  background-color:rgba(255,255,255,0.70);
  padding-left: 1.75em;
  padding-right: 1.75em;
  padding-top: 0.25em;
  padding-bottom: 1.75em;
}

  div.settings_container table
  {
    width: 100%
  }

  div.settings_container label,
  div.settings_container input[type="submit"]
  {
    display:block;
    margin-top:15px;
  }

  div.settings_container #name
  {
    vertical-align:top;
    width: 50%;
  }

  div.settings_container #password
  {
    vertical-align:top;
    width: 50%;
    padding-right: 1.75em;
  }