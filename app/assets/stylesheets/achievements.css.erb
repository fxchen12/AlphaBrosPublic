html, body{height:100%;}

div.achievements_background
{
  min-height:100%;
  overflow:auto;
  /*padding-bottom: -6em;*/
  margin-bottom:1em;
    background-image: url(<%= asset_path 'background18.jpg' %>);
  background-repeat:no-repeat;
  background-size:cover;
  background-position:center;
}

div.achievements_container
{
  color:#404040;
  background-color:rgba(255,255,255,0.70);
}

table.achievements_table
{
  width:100%;
  margin-bottom:10px;
}


tr.achievement_row
{
  height:270px;
  line-height:0;
  padding: 0;
  margin: 0;
}

tr.achievement_text_row
{
  padding: 0;
  margin: 0;
}

img.false
{
  filter: url(<%= asset_path 'filters.svg#grayscale' %>); /* Firefox 3.5+ */
  filter: gray; /* IE6-9 */
  -webkit-filter: grayscale(1); /* Google Chrome, Safari 6+ & Opera 15+ */
}