html, body{height:100%;}

div.goals_background
{
  min-height:100%;
  overflow:auto;
  /*padding-bottom: -6em;*/
  margin-bottom:1em;
  background-image: url(<%= asset_path 'background6.jpg' %>);
  background-repeat:no-repeat;
  background-size:cover;
  background-position:center;
}

div.goals_container
{
  color:#404040;
  background-color:rgba(255,255,255,0.57);
}

td.goals_workout_name
{
  padding-top: 30px;
  padding-left:75px;
  width:10%;
  font-size:24pt;
  vertical-align: middle;
}

td.progress
{
  padding-top:30px;
  padding-left:30px;
  padding-right:30px;
  width:10%;
  vertical-align: middle;
}

td.goal_button
{
  padding-top:30px;
}

td.goal_button img
{
  cursor:pointer;
  width:auto;
  height:auto;
  vertical-align: middle;
}

div.goal_cover
{
  position: fixed;
  top: 0px;
  left: 0px;
  height: 100%;
  width: 100%;
  background-color: gray;
  opacity: 0.65;
  z-index: 100;
}

div.workout_goals
{
  position: absolute;
  top: 11%;
  left: 25%;
  margin-top: 40px;
  width: 50%;
  padding: 15px;
  background-color: white;
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.5);
  border-radius: .25em;
  line-height: 125%;
  z-index: 110;
}

input[value="Set New Goal"]
{
  padding-top:0em;
  height:3em;
  width:15em;
}